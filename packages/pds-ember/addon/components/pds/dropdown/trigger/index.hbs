{{!-- template-lint-disable simple-unless --}}
<summary
  class="
    pds-dropdownTrigger
    pds-button
    pds--iconEnd
    {{this.variantClass}}
    {{if @compact 'pds--compact'}}
    {{if @hideText 'pds--iconOnly'}}
    {{unless (has-block) 'pds--iconOnly'}}
  "
  ...attributes
  data-test-dropdown-trigger
>
  <span class="pds-dropdownTrigger__layoutWrapper">
    {{#if (has-block)}}
      <span
        class="{{if @hideText 'pds--visuallyHidden'}}"
        data-test-dropdown-trigger-block-content
      >
        {{yield}}
      </span>
    {{/if}}

    <Pds::Icon
      @type={{this.icon}}
      class="pds-button__iconEnd"
      data-test-dropdown-trigger-icon
    />
  </span>
</summary>
{{!-- template-lint-enable simple-unless --}}
